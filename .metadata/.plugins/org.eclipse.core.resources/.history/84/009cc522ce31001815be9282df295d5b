package main;

import javax.ws.rs.Consumes;
import javax.ws.rs.GET;
import javax.ws.rs.POST;
import javax.ws.rs.Path;
import javax.ws.rs.Produces;
import javax.ws.rs.core.MediaType;
import javax.ws.rs.core.Response;

import com.google.gson.Gson;

@Path("/MonService")
public class TchatService {
	// Retourner du Json
	@Path("/messageJson")
	@GET
	@Produces(MediaType.APPLICATION_JSON)
	public Response getMessageBean() {
		MessageBean message = new MessageBean("bob", "blabla");
		Gson gson = new Gson();

		return Response.status(200).entity(gson.toJson(message)).build();
	}
	// // RETOURNER ET RECEVOIR DU JSON
		@POST
		@Path("/messageAllJson")
		@Consumes(MediaType.APPLICATION_JSON)
		@Produces(MediaType.APPLICATION_JSON)
		public Response sendMessage(String recu) {
			System.out.println(recu);
			Gson gson = new Gson();

			if (recu == null || recu.length() == 0) {
				return Response.status(200).entity(gson.toJson("Veuillez envoyer un élève")).build();

			} else {
				MessageBean message = gson.fromJson(recu, MessageBean.class);
				message.setMessage("coucou");
				return Response.status(200).entity(gson.toJson(message)).build();
			}
		}}
