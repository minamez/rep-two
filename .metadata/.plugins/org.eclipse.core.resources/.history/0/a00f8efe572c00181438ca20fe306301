package pack1;

public class ExoFor {

	public static int testFor(String maChaine) {

		// Trouver le nbr de "a" dans le mot
		int compteur = 0;
		// maChaine.length() -> la taille de la liste

		for (int i = 0; i < maChaine.length(); i++) {
			// Récupération du caractère à lire
			char c = maChaine.charAt(i);
			// Action
			if (c == 'a') {
				compteur++;

			}

		}
		System.out.println("Le nombre de a est : " + compteur);
		return compteur;

	}

	// lettre la plus grande/petite
	public static char grandFor(String maChaine) {

		// on initialise à "a" pour trouver lettre la plus grande et à "z" pour
		// la plus petite
		char resultat = 'z';
		// maChaine.length() -> la taille de la liste

		for (int i = 0; i < maChaine.length(); i++) {
			// Récupération du caractère à lire
			char c = maChaine.charAt(i);
			// Action
			if (c < resultat) {// on cherche la lettre la plus grande/petite
								// dans la chaine de caractere c
				resultat = c; // on donne cette valeur à resultat

			}

		}
		System.out.println("La lettre la plus petite est : " + resultat);
		return resultat;

	}

	// combien de fois la lettre la plus grande apparait
	public static char nbgrFor(String maChaine) {
		int compteur = 0;

		// on initialise à "a" pour trouver lettre la plus grande et à "z" pour
		// la plus petite
		char resultat = 'a';
		// maChaine.length() -> la taille de la liste

		for (int i = 0; i < maChaine.length(); i++) {
			// Récupération du caractère à lire
			char c = maChaine.charAt(i);
			// Action
			if (c > resultat) {// on cherche la lettre la plus grande/petite
								// dans la chaine de caractere c
				resultat = c; // on donne cette valeur à resultat
				compteur++;

			}

		}

		System.out.println("La lettre la plus grande apparait : " + compteur + " fois");
		return resultat;

	}

	// comment renverser l'ordre des lettres d'une chaine de caracteres
	public static String reverFor(String maChaine) {

		// on initialise à "a" pour trouver lettre la plus grande et à "z" pour
		// la plus petite
		String resultat = "";
		// maChaine.length() -> la taille de la liste, attention on commence à 0

		for (int i = 0; i < maChaine.length(); i++) {
			// Récupération du caractère à lire
			char c = maChaine.charAt((maChaine.length() - 1) - i);
			// Action
			resultat = resultat + c;

		}
		System.out.println("L'inverse de la chaine est : " + resultat);
		return resultat;
	}

	// comment n'afficher que les consonnes
	public static String consFor(String maChaine) {

		// on initialise à "a" pour trouver lettre la plus grande et à "z" pour
		// la plus petite
		String resultat = "";
		// maChaine.length() -> la taille de la liste, attention on commence à 0

		for (int i = 0; i < maChaine.length(); i++) {
			// Récupération du caractère à lire
			char c = maChaine.charAt(i);
			// Action
			if (c != 'a' && c != 'e' && c != 'i' && c != 'o' && c != 'u' && c != 'y') {
				resultat = resultat + c;
			}

		}
		System.out.println("La chaine sans voyelles est : " + resultat);
		return resultat;
	}

	// comment dire si la chaine de caracteres est du plus petit au plus grand
	// (ordre alphabétique)
	public static boolean triFor(String maChaine) {

		// on initialise à "a" pour trouver lettre la plus grande et à "z" pour
		// la plus petite
		boolean resul = true;
		char resultat = 'a';
		// maChaine.length() -> la taille de la liste, attention on commence à 0

		for (int i = 0; i < maChaine.length(); i++) {
			// Récupération du caractère à lire
			char c = maChaine.charAt(i);
			// Action
			if (c < resultat) {

				resul = false;

			} else {
				resultat = c;

			}

		}
		System.out.println("les caracteres sont dans l'ordre: " + resul);
		return resul;

	}

	// comment savoir si seulement les lettres miniscules sont affiches
	public static boolean minFor(String maChaine) {

		// on initialise à "a" pour trouver lettre la plus grande et à "z" pour
		// la plus petite
		boolean minuscule = true;
		char resultat = 'a';

		// maChaine.length() -> la taille de la liste, attention on commence à 0

		for (int i = 0; i < maChaine.length(); i++) {
			// Récupération du caractère à lire
			char c = maChaine.charAt(i);
			// Action
			if (c < 'a' || c > 'z') {
				minuscule = false;

			} else {
				resultat = c;
			}

		}
		System.out.println("les caracteres affiches sont minuscules: " + minuscule);
		return minuscule;

	}
	
	// somme des caracteres
	public static char somFor(String maChaine) {
		int compteur = 0;

		// on initialise à "a" pour trouver lettre la plus grande et à "z" pour
		// la plus petite
		int resultat = 0;
		// maChaine.length() -> la taille de la liste

		for (int i = 0; i < maChaine.length(); i++) {
			// Récupération du caractère à lire
			char c = maChaine.charAt(i);
			// Action
			resultat = c+ resultat;
		/*	if (c > resultat) {// on cherche la lettre la plus grande/petite
								// dans la chaine de caractere c
				resultat = c; // on donne cette valeur à resultat
				compteur++;

			}*/

		}

		System.out.println("La somme des caracteres est : " + resultat);
		return resultat;

	}

	// exo boucle while diapo 51

	public static void exoWhile(int max) {

		int i = 0;
		while (!(i % 7 == 0 && i % 11 == 0 && i % 5 == 0 && (i + (i - 1)) % 36 == 1) && i < max) {
			i++;
		}
		System.out.println("Le nombre est : " + i);
	}

}
